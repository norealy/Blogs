script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js')
script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', rel='stylesheet')
link(href='../css/user.css', rel='stylesheet')

.container
  .main-body
    nav.main-breadcrumb(aria-label='breadcrumb')
      ol.breadcrumb
        li.breadcrumb-item
          a(href='/') Home
        li.breadcrumb-item
          a(href='/auth/login') User profile
.container
  .row
  form(action='/users/search',method='GET')
    .form-group
      input(type="text",name="q")
      button.btn.btn-outline-primary.ml-2 Search
    .col-lg-12
      .main-box.clearfix
        .table-responsive
          table.table.user-list
            thead
              tr
                th
                  span User
                th
                  span Created
                th.text-center
                  span Email
                th
                  span Options
                th &nbsp;
            tbody
              if users
                each user in users
                  tr
                    td
                      img(src=user.avt, alt='')
                      a.user-link(href=`user/${user.iduser}`)= user.username
                      if user.permistion==1
                        span.user-subhead Member
                      else if  user.permistion==0
                        span.user-subhead Admin
                    td= user.createdAt
                    td
                      a(href='#')= user.email
                    td(style='width: 20%;')
                      a.table-link(href='#')
                        span.fa-stack
                          i.fa.fa-square.fa-stack-2x
                          i.fa.fa-search-plus.fa-stack-1x.fa-inverse
                      a.table-link(href='#')
                        span.fa-stack
                          i.fa.fa-square.fa-stack-2x
                          i.fa.fa-pencil.fa-stack-1x.fa-inverse
                      a.table-link.danger(href=`/users/del/${user.iduser}`)
                        span.fa-stack
                          i.fa.fa-square.fa-stack-2x
                          i.fa.fa-trash-o.fa-stack-1x.fa-inverse
