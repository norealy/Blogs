extends ../headerfooter.pug
block content
  header.masthead(style="background-image: url('/img/about-bg.jpg')")
    .overlay
    .container
      .row
        .col-lg-8.col-md-10.mx-auto
          .page-heading
            h1 Lập trình Blog
            span.subheading Website chia sẻ lập trình
  hr
  .container
    if posts
      each post in posts
        div
          span=  post.createdAt
          image(src=post.image,width="1000px")
          br
          each tag in tags
            if tag.idtag == post.idtag
              span.bg-info= `# ${tag.nametag}`
          h2=  post.title
          br
          span=  post.content
          hr
          br
    else
        span= "Bạn chưa có bài đăng nào !"